<body>

<div class = "nav" align="center">

    <a href="/login" style="opacity:0.9"> <img src="https://cdn4.iconfinder.com/data/icons/basic-ui-elements/700/09_home-512.png" width="50" height="50"/></a>  
    
    <a href="/feed" style="opacity:0.9"> <img src="http://nationalevents.cityofhope.org/images/content/pagebuilder/instagram.png" width="50" height="50"/></a>
      
    <a href="/auth/facebook" style="opacity:0.9"> <img src="http://nationalevents.cityofhope.org/images/content/pagebuilder/facebook-icon.png" width="50" height="50"/></a>
    
  </div>


  <div id="info">

    <h4>Hello!</h4>
    <p>id: {{user.id}}</p>
    <p>username: {{user.username}}</p>
    <p> hint: try hover on the post!</p>
  </div>

 {{#each feed}}
    <div id="photos">
    <center>  
      <img src="{{url}}" class="img-responsive" class="img hashtag-img" /><br>
      <div id="caption"><p>{{caption}}</p>
      <div class="likes"><p>This post received {{likes}} likes!</p></div>
    </center>
   </div> 
{{/each}}

