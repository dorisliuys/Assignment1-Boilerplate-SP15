<!doctype html>

<html>
<head>
	<title>Facebook User Info</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	

    <!-- HTMLÃ¥5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
      <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
      <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
</head>

<body>

  <div>
    <h2>{{user.displayName}}, you are now logged into Facebook!</h2>
    <p>Your user ID: {{user.id}}</p>
    <p>Your birthday: {{user.birthday}}</p>

  </div>

  {{#each likes}}
                {{#if @first}}
                    <div class="item active">
                        <div class="inner-item" style="text-align: center">
                            <img class="img-rounded" src="http://graph.facebook.com/{{id}}/picture?type=large" style="margin: 0 auto">
                            <h4 style="color: #f9f9f9">
                                {{#if caption}}
                                    {{owner_name}}: {{caption}}
                                {{else}}
                                    {{name}}
                                {{/if}}
                            </h4>
                        </div>
                    </div>
                {{else}}
                    <div class="item">
                        <div class="inner-item" style="text-align: center">
                            <img class="img-rounded" src="http://graph.facebook.com/{{id}}/picture?type=large" style="margin: 0 auto">
                            <h4 style="color: #f9f9f9">
                                {{#if caption}}
                                    {{owner_name}}: {{caption}}
                                {{else}}
                                    {{name}}
                                {{/if}}
                            </h4>
                        </div>

                    </div>
                {{/if}}
            {{/each}}

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="js/jquery.validate.min.js"></script>
    <script src="js/additional-methods.min.js"></script>
    <script src="js/validate.js"></script>
    <script src="js/bootstrap.js"></script>
</body>
</html>
